<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".addEventdetails">

    <!-- TODO: Update blank fragment layout -->

    <!--Following are ids given to EditText boxes in this section
 according to Add Picture, Event Name, Description, Date Respectively-->
    <!--    @+id/changePicBtn-->
    <!--    @+id/eventNameBox-->
    <!--    @+id/descBox-->
    <!--    @+id/eventDateBox-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:background="@drawable/nav_background"
        android:paddingBottom="10dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Your"
                    android:textStyle="normal"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:layout_marginStart="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="Event"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="33sp"
                    android:layout_marginStart="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


            </LinearLayout>


        </LinearLayout>

        <include
            android:layout_gravity="center"
            layout="@layout/activity_event_img"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="match_parent" />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <include layout="@layout/activity_event_name"/>
                <include layout="@layout/activity_event_desc"/>
                <include layout="@layout/activity_event_date"/>

                <Button
                    android:id="@+id/nextBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="center"

                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="2dp"
                    android:layout_marginRight="50dp"
                    android:background="@drawable/button_shape"
                    android:enabled="true"
                    android:text="Next"
                    android:textColor="@color/white"/>

            </LinearLayout>

        </ScrollView>



    </LinearLayout>

</RelativeLayout>