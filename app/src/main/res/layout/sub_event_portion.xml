
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/subevent_portion_shape">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/subBoxInputlayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:hint="Sub-Event Name"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                android:theme="@style/Theme.Eventtra">
                <EditText
                    android:id="@+id/subBox"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:background="@drawable/textback"
                    android:gravity="bottom"
                    android:padding="5dp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="end">
                <ImageButton
                    android:id="@+id/subEventMenuBtn"
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:background="@android:color/transparent"
                    android:src="@drawable/threedots" />
            </LinearLayout>



        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/headInputlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:hint="Head Email"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            android:theme="@style/Theme.Eventtra">
            <EditText
                android:id="@+id/headBox"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/textback"
                android:gravity="bottom"
                android:padding="5dp"/>
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

</RelativeLayout>