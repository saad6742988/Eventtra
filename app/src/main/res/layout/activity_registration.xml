<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".addEventdetails"
    android:background="@color/screens_background">

    <!-- TODO: Update blank fragment layout -->

    <!--Following are ids given to EditText boxes in this section
 according to Add Picture, Event Name, Description, Date Respectively-->
    <!--    @+id/changePicBtn-->
    <!--    @+id/eventNameBox-->
    <!--    @+id/descBox-->
    <!--    @+id/eventDateBox-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:paddingBottom="10dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/registerEventTitle"
                    android:text="Event Registration"
                    android:textStyle="normal"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:layout_marginStart="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/subEventName"
                    android:text="Get Event Name"
                    android:textStyle="normal"
                    android:textColor="@color/white"
                    android:padding="15dp"
                    android:textSize="25sp"
                    android:layout_marginStart="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


            </LinearLayout>


        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <!--  User Name Input           -->


                <!-- end of user name input      -->

                <!-- start of cnic input              -->



                <!--  end of cnic input              -->


                <!--      Number of Participants          -->
                <include layout="@layout/activity_register_name"/>
                <include layout="@layout/activity_register_cnic"/>
                <include layout="@layout/activity_register_no_of_participant"/>

                <LinearLayout
                    android:id="@+id/dynamicContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                </LinearLayout>

                <Button
                    android:id="@+id/RegisterBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="2dp"
                    android:layout_marginRight="50dp"
                    android:background="@drawable/button_shape"
                    android:enabled="true"
                    android:text="Register"
                    android:textColor="@color/white"/>

            </LinearLayout>

        </ScrollView>



    </LinearLayout>

</RelativeLayout>