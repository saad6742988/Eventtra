<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/enrollmentCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:elevation="10dp"
        app:cardCornerRadius="6dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/aboveColor">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/enrollmentSubName"
                android:layout_width="201dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="3dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="167dp"
                android:padding="5dp"
                android:text="TextView"
                android:textColor="@color/DarkGreen"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/enrollmentName"
                android:layout_width="201dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/enrollmentSubName"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="12dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="188dp"
                android:padding="5dp"
                android:text="Name"
                android:textSize="15dp" />
            <TextView
                android:id="@+id/enrollmentCnic"
                android:layout_width="201dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/enrollmentName"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="12dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="188dp"
                android:padding="5dp"
                android:text="Cnic"
                android:textSize="15dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/enrollmentCnic"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="12dp"
                android:layout_marginTop="0dp">
                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/animationView"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    app:lottie_rawRes="@raw/paidanimation"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"/>
                <TextView
                    android:id="@+id/enrollmentStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Paid"
                    android:textSize="15dp"
                    android:textColor="@color/DarkGreen"
                    android:gravity="center_vertical"/>
            </LinearLayout>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>