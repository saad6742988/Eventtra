<!--                    android:id="@+id/attendeeMainDate"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:textSize="14dp"-->
<!--                    android:text="Date"/>-->
<!--            </androidx.appcompat.widget.LinearLayoutCompat>-->
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>